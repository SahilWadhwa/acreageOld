    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <activity
            android:name="com.deere.acreage.ContactsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.deere.acreage.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>

        <activity
            android:name="com.deere.acreage.ShowAreaActivity"
            android:label="Calculated Area"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.deere.acreage.CalculateAreaActivity"
            android:label="Calculate Area"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.deere.acreage.DetailsActivity"
            android:label="Generate Receipt"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.deere.acreage.ReceiptActivity"
            android:label="Receipt"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.deere.acreage.ImagePrintActivity"
            android:label="Print"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.deere.acreage.TimeBasedActivity"
            android:label="Timer"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.deere.acreage.AcreageOptionActivity"
            android:label="@string/title_activity_acreage_option" >
        </activity>
        <activity
            android:name="com.deere.acreage.MarkOnMaps"
            android:label="@string/title_activity_mark_on_maps" >
        </activity>
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBEPj2BJ2DkNlBhd_kEb1qm8H76N03w9Ks"/>
