<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <ScrollView     
    android:id="@+id/scrollView1"     
    android:layout_width="fill_parent"    
     android:layout_height="fill_parent"     
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:fillViewport="true"> 
     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >

     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#007500"
    >
    <TableLayout  
    xmlns:android="http://schemas.android.com/apk/res/android"  
    android:id="@+id/tableLayout1"  
    android:layout_width="fill_parent"  
    android:layout_height="wrap_content"  
    android:shrinkColumns="*"  
    android:stretchColumns="*"
    android:paddingTop="50dip"
    >  
    <TableRow  
        android:id="@+id/tableRow4"  
        android:layout_height="50dip"  
        android:layout_width="fill_parent"  
        android:gravity="center_horizontal">  
        <TextView  
            android:id="@+id/textView9"  
            android:layout_width="match_parent"  
            android:layout_height="50dip"   
            android:text="Farm Co-ordinates"  
            android:gravity="center"  
            android:layout_span="2"
            style="@style/TableHeadingFont"
            android:background="@drawable/shape"></TextView>  
    </TableRow>  
    <TableRow  
        android:id="@+id/tableRow1"  
         
       android:layout_width="fill_parent"
       android:background="#ffff00">  
        
       <TextView  
           android:id="@+id/TextViewLat"  
            android:text="Latitude"  
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            style="@style/TableContentFont"
            android:background="@drawable/shape"
            android:gravity="center"></TextView>  
       <TextView  
            android:id="@+id/TextViewLatVal" 
            style="@style/TableContentFont"
            android:layout_width="170dip"
            android:layout_height="50dip"
            android:text="00.000"
            android:gravity="center"
            android:background="@drawable/shape"></TextView>  
    </TableRow> 
    <TableRow  
        android:id="@+id/tableRow2"  
         
       android:layout_width="fill_parent"
        android:background="#ffff00">  
        
       <TextView  
           android:id="@+id/TextViewLong"  
            android:text="Longitude"  
        	style="@style/TableContentFont"
        	android:layout_width="wrap_content"
        	android:layout_height="50dip"
        	android:background="@drawable/shape"
        	android:gravity="center"></TextView>  
       <TextView  
            android:id="@+id/TextViewLongVal"  
            style="@style/TableContentFont"
            android:layout_width="170dip"
              android:layout_height="50dip"
              android:text="00.000"
            android:gravity="center"
            android:background="@drawable/shape"></TextView> 
    </TableRow> 
    </TableLayout>
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:background="#007500"
    android:weightSum="1.0"
   >
    <Button
        android:id="@+id/btnStart"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Start" 
        android:textSize="22dip"
        style="@style/MyButton"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="2dp" 
        android:layout_weight="0.5"/>
    <Button
        android:id="@+id/btnStop"
         android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Stop" 
   		android:enabled="false"
       	android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="2dp" 
        android:textSize="22dip"
        style="@style/MyButton"
        android:layout_weight="0.5"
        android:onClick="calculateArea"/>
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:background="#007500"
    android:weightSum="1.0"
   >
        <Button
        android:id="@+id/btnAreaCancel"
         android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Cancel" 
       	android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="2dp" 
        android:textSize="22dip"
        style="@style/MyButton"
        android:layout_weight="0.75"
        android:onClick="onCancelArea"/>
        </LinearLayout>
</LinearLayout>
</LinearLayout>
</ScrollView>
</LinearLayout>