<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:background="#007500"
            >
        <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="#ffff00"
                android:fillViewport="true">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:orientation="vertical"
                          android:background="#007500"
                    >

                <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#007500">
                    <TableLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/tableLayout1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:shrinkColumns="*"
                            android:stretchColumns="*"
                            android:paddingTop="10dp"
                            >
                        <TableRow
                                android:id="@+id/tableRow1"
                                android:layout_height="50dp"
                                android:layout_width="fill_parent"
                                android:gravity="center_horizontal">
                            <TextView
                                    android:id="@+id/ownerNo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Owner's Mobile Number"
                                    android:minHeight="40dp"
                                    android:textSize="24dp"
                                    android:textColor="#ffffff"
                                    >
                            </TextView>
                        </TableRow>
                        <TableRow
                                android:id="@+id/tableRow2"
                                android:layout_height="50dp"
                                android:layout_width="fill_parent"
                                android:gravity="center_horizontal">
                            <EditText
                                    android:id="@+id/textOwnerNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="24dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:hint="Owner's Mobile Number"
                                    />
                        </TableRow>
                        <TableRow
                                android:id="@+id/tableRow3"
                                android:layout_height="50dp"
                                android:layout_width="fill_parent"
                                android:gravity="center_horizontal">
                            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                          android:layout_width="fill_parent"
                                          android:layout_height="wrap_content"
                                          android:orientation="horizontal"
                                          android:background="#007500"
                                          android:weightSum="1.0"
                                    >
                                <TextView
                                        android:id="@+id/pin"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="PIN: "
                                        android:minHeight="40dp"
                                        android:textSize="24dp"
                                        android:textColor="#ffffff"
                                        android:layout_weight="0.5"
                                        >
                                </TextView>

                                <EditText
                                        android:id="@+id/textPin"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:textSize="24dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginLeft="2dp"
                                        android:layout_marginRight="2dp"
                                        android:layout_marginBottom="2dp"
                                        android:hint="PIN"
                                        android:layout_weight="0.5"
                                        />
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                                android:id="@+id/tableRow4"
                                android:layout_height="50dp"
                                android:layout_width="fill_parent"
                                android:gravity="center_horizontal">
                            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                          android:layout_width="fill_parent"
                                          android:layout_height="wrap_content"
                                          android:orientation="horizontal"
                                          android:background="#007500"
                                          android:weightSum="1.0"
                                    >
                                <TextView
                                        android:id="@+id/operation"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="Operation: "
                                        android:minHeight="40dp"
                                        android:textSize="24dp"
                                        android:layout_marginTop="10dp"
                                        android:textColor="#ffffff"
                                        android:layout_weight="0.5"
                                        >
                                </TextView>
                                <Spinner
                                        android:id="@+id/spinnerOperationSettings"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:prompt="@string/operation_prompt"
                                        android:layout_marginTop="10dp"
                                        android:textSize="24dp"
                                        android:textColor="#000000"
                                        android:layout_weight="0.5"
                                        />
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                                android:id="@+id/tableRow5"
                                android:layout_height="50dp"
                                android:layout_width="fill_parent"
                                android:gravity="center_horizontal">
                            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                          android:layout_width="fill_parent"
                                          android:layout_height="wrap_content"
                                          android:orientation="horizontal"
                                          android:background="#007500"
                                          android:weightSum="1.0"
                                    >
                                <TextView
                                        android:id="@+id/hourRate"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="Rate/hour(in Rs): "
                                        android:minHeight="40dp"
                                        android:textColor="#ffffff"
                                        android:textSize="24dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_weight="0.5"
                                        >
                                </TextView>
                                <EditText
                                        android:id="@+id/textHourRate"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:hint="Rate/Hr"
                                        android:textSize="24dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_weight="0.5"
                                        />
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                                android:id="@+id/tableRow6"
                                android:layout_height="50dp"
                                android:layout_width="fill_parent"
                                android:gravity="center_horizontal">
                            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                          android:layout_width="fill_parent"
                                          android:layout_height="wrap_content"
                                          android:orientation="horizontal"
                                          android:weightSum="1.0"
                                          android:background="#007500"
                                    >
                                <TextView
                                        android:id="@+id/acreRate"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="Rate/acre(in Rs): "
                                        android:minHeight="40dp"
                                        android:textSize="24dp"
                                        android:layout_marginTop="10dp"
                                        android:textColor="#ffffff"
                                        android:layout_weight="0.5"
                                        >
                                </TextView>
                                <EditText
                                        android:id="@+id/textAcreRate"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:textSize="24dp"
                                        android:layout_marginTop="10dp"
                                        android:hint="Rate/Acre"
                                        android:layout_weight="0.5"
                                        />

                            </LinearLayout>
                        </TableRow>
                    </TableLayout>
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                  android:layout_width="fill_parent"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:gravity="center_horizontal"
                                  android:background="#007500"
                                  android:weightSum="1.0"
                            >
                        <Button
                                android:id="@+id/btnOkSettings"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:text="Ok"
                                android:textSize="24dp"
                                style="@style/MyButton"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginBottom="2dp"
                                android:onClick="onOkSettings"
                                android:layout_weight="0.5"
                                />
                        <Button
                                android:id="@+id/btnCancelSettings"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:text="Cancel"
                                android:textSize="24dp"
                                style="@style/MyButton"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginBottom="2dp"
                                android:onClick="onCancelSettings"
                                android:layout_weight="0.5"
                                />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
